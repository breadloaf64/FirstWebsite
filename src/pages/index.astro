---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Peter Kaku">
	<main>
		<h1>Peter Kaku</h1>
        <p>Welcome to my website :&#41;</p>
		<ul>
			<li>
                <a
                    href="https://www.youtube.com/channel/UC8rYXjmwYU3I0dd2DM8Iq7g"
